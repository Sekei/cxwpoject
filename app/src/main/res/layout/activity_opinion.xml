<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uli_F5F5F5"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_white" />

    <TextView
        android:id="@+id/opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:lineSpacingExtra="5dp"
        android:textSize="12sp"
        android:text="我们知道我们的业务还不成熟，有许多地方需要改进，所以我们需要您的宝贵意见，您的意见是我们前进的动力^_^。"
        android:textColor="@color/uli_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/uli_FFFFFF">

        <EditText
            android:id="@+id/opinion_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@null"
            android:gravity="top"
            android:hint="我要反馈(限150字内)"
            android:maxLength="150"
            android:textColor="@color/uli_797979"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="right"
        android:text="0/150字"
        android:textColor="@color/uli_797979"
        android:textSize="12sp" />

    <Button
        android:id="@+id/opinion_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textview_style_theme"
        android:text="提 交"
        android:textColor="@color/uli_FFFFFF" />

</LinearLayout>