<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uli_FFFFFF"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/share_weixin_py_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="拍   照"
        android:textColor="#00AEEF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/uli_DCDDDD" />

    <TextView
        android:id="@+id/share_weibo_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="从相册选择"
        android:textColor="#00AEEF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/uli_DCDDDD" />

    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/share_button_layout"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/uli_FF5449" />

</LinearLayout>